---
import { getCollection } from 'astro:content';
import LeRobotDocsLayout from '../../layouts/LeRobotDocsLayout.astro';
import OtherRobotsDocsLayout from '../../layouts/OtherRobotsDocsLayout.astro';

export async function getStaticPaths() {
  const docs = await getCollection('docs');
  
  return docs.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// slug에 따라 다른 레이아웃 사용
const isOthersPage = entry.slug.includes('physical-ai/others');
const Layout = isOthersPage ? OtherRobotsDocsLayout : LeRobotDocsLayout;
---

<Layout title={entry.data.title} description={entry.data.description}>
  <Content />
</Layout>
